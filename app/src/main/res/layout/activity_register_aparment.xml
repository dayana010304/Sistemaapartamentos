<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoandrod"
    tools:context=".RegisterAparmentActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_apartamentos"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etOwner"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Nombre del propietario"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <EditText
                android:id="@+id/etCountrya"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Pais"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etOwner"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etCitya"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Ciudad"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etCountrya"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etNumberHab"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Numero Habitaciones"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etAddressa"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etAddressa"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Direccion"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etCitya"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etValueNight"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Valor Noche"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNumberHab"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etReviewApar"
                android:layout_width="302dp"
                android:layout_height="51dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="ReseÃ±a Apartamento"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etValueNight"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnRegisterApar"
                android:layout_width="247dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="22dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/black"
                android:onClick="addApartment"
                android:text="Agregar apartamento"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>